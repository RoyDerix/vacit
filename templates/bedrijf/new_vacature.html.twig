{% extends 'base.html.twig' %}

{% block title %}Maak een nieuwe vacature{% endblock %}

{% block body %}

    <form class="form-horizontal" action="{{ path('saveVacature') }}" method="POST">
        <fieldset>

            <legend>Maak een nieuwe vacature</legend>

            <div class="form-group">
                <label class="control-label" for="titel">Titel</label>  
                <input id="titel" name="titel" type="text" class="form-control input-md" required="">                
            </div>
                        
            <div class="form-group">
                <label class="control-label" for="niveau">Niveau</label>  
                <select id="niveau" name="niveau" class="form-control input-md"> 
                    {% for niveau in niveaus %}
                        <option value="{{ niveau.id }}">{{ niveau.tekstveld }}</option>
                    {% endfor %}
                </select>               
            </div>

            <div class="form-group">
                <label class="control-label" for="platform">Platform</label>  
                <select id="platform" name="platform" class="form-control input-md"> 
                    {% for platform in platforms %}
                        <option value="{{ platform.id }}">{{ platform.tekstveld }}</option>
                    {% endfor %}
                </select>               
            </div>

            <div class="form-group">
                <label class="control-label" for="naam">Standplaats</label>  
                <input id="standplaats" name="standplaats" type="text" class="form-control input-md" required="">                    
            </div>

            <div class="form-group">
                <label class="control-label" for="email">Vacature beschrijving</label>  
                <input id="vacatureBeschrijving" name="vacatureBeschrijving" type="text" class="form-control input-md" required="">
            </div>

            <div class="form-group">
                <input type="submit" value="Save">
            </div>

        </fieldset>
    </form>

{% endblock %}
