{% extends 'base.html.twig' %}

{% block title %}Maak een nieuwe vacature{% endblock %}

{% block body %}

    <div class="grid-x grid-padding-x margin-body">
        <div class="cell medium-3 large-2 pic-large" style="min-width: 200px">
            <div class="medium-centered" style="max-width: 200px;">
                <img class="medium-centered" src="{{asset(app.user.profielfoto)}}">
            </div>
        </div>

        <div class="cell medium-8 large-offset-1">
        
            <div class="grid-x">
                <div class="cell small-4 pic-small" style="margin-bottom: 20px">
                    <img style="width: 120px" src="{{asset(app.user.profielfoto)}}">
                </div>

                <div class="cell small-8 medium-12">
                    <h1 style="color: var(--orange)">nieuwe vacature</h1>
                </div>
            </div>

            <form class="form-horizontal" action="{{ path('saveVacature') }}" method="POST">
                <fieldset>



                    <input id="bedrijf_id" name="bedrijf_id" type="hidden" value="{{ app.user.id }}" class="form-control input-md" required="">    

                    
                    <div class="grid-x grid-padding-x" style="margin-bottom: 20px">
                        <div class="cell">
                            <label class="control-label" for="titel">Titel</label>  
                            <input id="titel" name="titel" type="text" class="form-control input-md" required="">
                        </div>
                    </div>              

                    <div class="grid-x grid-padding-x">       
                        <div class="cell medium-6">
                            <label class="control-label" for="niveau">Niveau</label>  
                            <select id="niveau" name="niveau" class="form-control input-md form-select"> 
                                {% for niveau in niveaus %}
                                    <option value="{{ niveau.id }}">{{ niveau.tekstveld }}</option>
                                {% endfor %}
                            </select>               
                        </div>

                        <div class="cell medium-6">
                            <label class="control-label" for="platform">Platform</label>  
                            <select id="platform" name="platform" class="form-control input-md form-select"> 
                                {% for platform in platforms %}
                                    <option value="{{ platform.id }}">{{ platform.tekstveld }}</option>
                                {% endfor %}
                            </select>               
                        </div>
                    </div>

                    <div class="grid-x grid-padding-x" style="margin-bottom: 20px">
                        <div class="cell">
                            <label class="control-label" for="naam">Standplaats</label>  
                            <input id="standplaats" name="standplaats" type="text" class="form-control input-md" required="">
                        </div>
                    </div>               
                    
                    <div class="grid-x grid-padding-x" style="margin-bottom: 20px">
                        <div class="cell"> 
                            <label class="control-label" for="vacatureBeschrijving">Vacature beschrijving</label>  
                            <textarea id="vacatureBeschrijving" name="vacatureBeschrijving" rows="10" class="richtext" required=""></textarea>
                        </div>
                    </div>

                    <i class="fas fa-arrow-right" style="color: var(--orange); font-size: 36px"></i><input type="submit" value="OPSLAAN">

                </fieldset>
            </form>
        </div>
    </div>

{% endblock %}
