<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" type="text/css" href="{{ asset('assets/foundation/css/foundation.css') }}"/>
        <link rel="stylesheet" type="text/css" href="{{ asset('assets/foundation/css/foundation-float.css') }}"/>
        <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/main.css') }}"/>
        <link rel="stylesheet" type="text/css" href="{{ asset('assets/fontawesome/fontawesome.css') }}"/>
        <link rel="stylesheet" type="text/css" href="{{ asset('assets/vegas/vegas/vegas.min.css') }}"/>
        <link rel="stylesheet" href="{{ asset('assets/richtext/richtext.min.css') }}"/>
        <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/fonts.css') }}"/>
        <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.23/css/jquery.dataTables.min.css"/>
        <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">



        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}
        <script type="text/javascript" language="javascript" src="{{ asset('assets/jquery/jquery.js') }}"></script>
        <script type="text/javascript" language="javascript" src="{{ asset('assets/richtext/jquery.richtext.min.js') }}"></script>
        <script type="text/javascript" language="javascript" src="{{ asset('assets/foundation/js/foundation.js') }}"></script>
        <script type="text/javascript" language="javascript" src="//cdn.datatables.net/1.10.23/js/jquery.dataTables.min.js"></script>
        <script src="{{ asset('assets/vegas//vegas/vegas.min.js') }}"></script>
        <script src="{{ asset('assets/simpleuploader/SimpleAjaxUploader.js') }}"></script>  


        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>

        <script>
            function openNav() {
                document.getElementById("myNav").className += " overlay-open";
            }

            function closeNav() {
                document.getElementById("myNav").className = "overlay-closed overlay";
            }

            $(function() {
                $('.richtext').richText({

                    underline: false,
                    leftAlign: false,
                    centerAlign: false,
                    rightAlign: false,
                    justify: false,
                    ol: false,
                    ul: false,
                    heading: false,
                    fonts: false,
                    fontColor: false,
                    fontSize: false,
                    imageUpload: false,
                    fileUpload: false,
                    urls: false,
                    table: false,
                    removeStyles: false,
                    code: false,
                    videoEmbed: false

                });
            });


            $(function() {
                $(document).foundation();
            });


        </script>

        <div class="grid-x" style="margin-bottom: -10px;">
            <div class="cell" style="background-color: var(--black); height: 120px; position: relative; z-index: 1">
                <div class="grid-x">
                    <div class="cell small-3">
                        <a href="{{ path('homepage') }}">
                            <img src="{{ asset('assets/logo/vacit-logo-white.png') }}" style="height: 100px; margin: 10px">
                        </a>
                    </div>
                    <div class="cell small-9 menu-groot" style="margin-top: 90px; color: white">
                        <div class="grid-x">
                            <div class="cell small-3 small-offset-3" style="text-align: center">
                                <h4><a style="color: white"
                                {% if not is_granted('ROLE_USER') %}
                                >
                                {% elseif is_granted('ROLE_KANDIDAAT') %}
                                href="{{ path('showKandidaatProfiel', {'id':app.user.id}) }}">MIJN PROFIEL
                                {% elseif is_granted('ROLE_BEDRIJF') %}
                                href="{{ path('showBedrijfProfiel', {'id':app.user.id}) }}">MIJN PROFIEL
                                {% endif %}
                                </a></h4>
                            </div>
                            <div class="cell small-3" style="text-align: center">
                                <h4><a style="color: white"
                                {% if not is_granted('ROLE_USER') %}
                                href="{{ path('registerKandidaat') }}">REGISTREREN
                                {% elseif is_granted('ROLE_KANDIDAAT') %}
                                href="{{ path('showSollicitaties', {'id':app.user.id}) }}">MIJN SOLLICITATIES
                                {% elseif is_granted('ROLE_BEDRIJF') %}
                                href="{{ path('showMijnVacatures', {'id':app.user.id}) }}">MIJN VACATURES
                                {% endif %}
                                </a></h4>
                            </div>
                            <div class="cell small-3" style="text-align: center">
                                <h4><a style="color: white" 
                                {% if not is_granted('ROLE_USER') %}
                                href="{{ path('app_login') }}">INLOGGEN
                                {% else %}
                                href="{{ path('app_logout') }}">UITLOGGEN
                                {% endif %}
                                </a></h4>
                            </div>
                            
                        </div>
                    </div>
                    <div class="menu-klein">
                        <div class="cell small-1 small-offset-7" style="margin-top: 15px; position: absolute">
                            <div style="font-size: 60px; 
                                        cursor: pointer; 
                                        color: #FFF;"
                                onclick="openNav()">&#9776;
                            </div>
                        </div>
                        <div id="myNav" class="overlay">
                            <div class="overlay-content" style="overflow-x: hidden">
                                <div class="row">
                                    <div>
                                        <a href="{{ path('homepage') }}">
                                            <img src="{{ asset('assets/logo/vacit-logo-black.png') }}"/>
                                        </a>
                                    </div>
                                    <div>
                                        <h4><a style="color: black; margin-left: 20px"
                                            {% if not is_granted('ROLE_USER') %}
                                            >
                                            {% elseif is_granted('ROLE_KANDIDAAT') %}
                                            href="{{ path('showKandidaatProfiel', {'id':app.user.id}) }}">MIJN PROFIEL
                                            {% elseif is_granted('ROLE_BEDRIJF') %}
                                            href="{{ path('showBedrijfProfiel', {'id':app.user.id}) }}">MIJN PROFIEL
                                            {% endif %}
                                        </a></h4>                            
                                    </div>
                                    <div>
                                        <h4><a style="color: black; margin-left: 20px"
                                            {% if not is_granted('ROLE_USER') %}
                                            href="{{ path('registerKandidaat') }}">REGISTREREN
                                            {% elseif is_granted('ROLE_KANDIDAAT') %}
                                            href="{{ path('showSollicitaties', {'id':app.user.id}) }}">MIJN SOLLICITATIES
                                            {% elseif is_granted('ROLE_BEDRIJF') %}
                                            href="{{ path('showMijnVacatures', {'id':app.user.id}) }}">MIJN VACATURES
                                            {% endif %}
                                        </a></h4>
                                    </div>
                                    <div>
                                        <h4><a style="color: black; margin-left: 20px"
                                            {% if not is_granted('ROLE_USER') %}
                                            href="{{ path('app_login') }}">INLOGGEN
                                            {% else %}
                                            href="{{ path('app_logout') }}">UITLOGGEN
                                            {% endif %}
                                        </a></h4>
                                    </div>
                                    <div class="col-md-4" style="margin-top: 20px;">
                                        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="cell balkje-boven"></div>
        </div>




        {% block body %}{% endblock %}





        <div class="grid-x" style="margin-top: -10px">

            <div class="cell balkje-beneden"></div>

            <div class="cell">

                <div class="grid-x" style="height: 120px; background-color: var(--black); width: 100%; overflow: hidden">


                    <div class="cell" style="height: 200px; background-color: var(--black); position: relative; z-index: 1">
                        <div class="grid-x">

                            <div class="cell small-6 large-3">
                                <a href="{{ path('homepage') }}">
                                    <img src="{{ asset('assets/logo/vacit-logo-white.png') }}" style="height: 100px; margin: 10px">
                                </a>
                            </div>

                            <div class="cell small-6 large-3" style="color: white; margin-top: 10px">
                                <h3>adres</h3>
                                <p>
                                Poststraat 2B<br>
                                6135 KR Sittard</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </body>
</html>
