<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" type="text/css" href="{{ asset('assets/bootstrap/css/bootstrap.css') }}"/>
        <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/main.css') }}"/>

        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}
        <script type="text/javascript" language="javascript" src="{{ asset('assets/bootstrap/js/bootstrap.js') }}"></script>


        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
        <div class="container-fluid">
            <div class="row" style="height: 200px; background-color: #333333">
                <img src="{{ asset('assets/logo/vacit-logo-white.png') }}" style="height: 100px; width: 200px">
            </div>

            {% block body %}{% endblock %}

            <div class="row" style="height: 200px; background-color: #333333">
                <h1 style="height: 200px; width: 100%; background-color: #333333">Footer
                </h1>
            </div>
        </div>

    </body>
</html>
